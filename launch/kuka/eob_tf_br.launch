<?xml version="1.0"?>
<launch>
    <arg name   =   "eye_on_hand"           defualt = "false"     doc   = "eye-on-hand instead of eye-on-base" />
    <arg name   =   "namespace_prefix"      default = "manipulator" />
    <arg if     =   "$(arg eye_on_hand)"    name    = "namespace"        value = "$(arg namespace_prefix)_eye_on_hand" />
    <arg unless =   "$(arg eye_on_hand)"    name    ="namespace"         value = "$(arg namespace_prefix)_eye_on_base" />

    <!--it is possible to override the link names saved in the yaml file in case of name clashes, for example-->
    <arg if         = "$(arg eye_on_hand)"  name    = "robot_effector_frame" default = "iiwa_link_ee" />
    <arg unless     ="$(arg eye_on_hand)"   name    ="robot_base_frame"      default ="iiwa_link_0" />
    <arg name       = "tracking_base_frame" default = "atracsys" />
    
    
    <arg name="inverse" default="false" />
    <arg name="calibration_file" default="" />
    
    <!--publish hand-eye calibration-->
    <group ns="$(arg namespace)">
        <param name="eye_on_hand"       value="$(arg eye_on_hand)" />
        <param if    ="$(arg eye_on_hand)"  name="robot_effector_frame" value="$(arg robot_effector_frame)" />
        <param unless="$(arg eye_on_hand)" name="robot_base_frame"      value="$(arg robot_base_frame)" />
        <param name="tracking_base_frame" value="$(arg tracking_base_frame)" />
        <param name="inverse"           value="$(arg inverse)" />
        <param name="calibration_file"  value="$(arg calibration_file)" />
        <node name="$(arg namespace)" pkg="easy_handeye" type="publish.py" output="screen"/>
    </group>

    <node type="rviz" name="rviz_endo360_calibration" pkg="rviz" 
        args="-d $(find tool_point_calibration)/rviz/kuka_endo360_calibration.rviz" />


	<node pkg = "nir_blob_tracker" type ="tf_inverter_delux" name ="tf_tcp_tip_wrt_marker" output="screen"> 
		<param name = "listen_frame_a"  value = "atracsys" />
		<param name = "listen_frame_b"  value = "iiwa_link_ee" />
        <param name = "listen_frame_c"  value = "tcp_tool_tip" />
		<param name = "new_frame_a"     value = "iiwa_link_ee" />
		<param name = "new_frame_b"     value = "hand_tool_tip" />
	</node>



</launch>